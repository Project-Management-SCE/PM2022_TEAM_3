pipeline {
    agent none
    stages{
        stage('Install requirements'){
            agent{
                docker{
                    image 'python:3.7'
                }
            }
            steps{
                withEnv(["HOME=${env.WORKSPACE}"]){
                    sh 'python -m pip install django==2.1.15'
                }
            }
        }
        stage('Compile'){
            agent{
                docker{
                    image 'python:3.7'
                }
            }
            steps{
                withEnv(["HOME=${env.WORKSPACE}"]){
			 sh 'python -m compileall PM2022_TEAM_3//'//manage.py'
                    	 sh 'pip install django_jenkins'
			 sh 'pip install django-crispy-forms'
			 sh 'python DoggieSitter/manage.py makemigrations'
                         sh 'python DoggieSitter/manage.py migrate'
                }
            }
        }
        stage('Tests'){
            agent{
                docker{
                    image 'python:3.7'
                }
            }
            steps{
		 withEnv(["HOME=${env.WORKSPACE}"]){
		    dir("DoggieSitter"){
			   //sh ' python stam.py'
                	   sh 'python manage.py test'
                    }
		}
            }
         }
    }
}
